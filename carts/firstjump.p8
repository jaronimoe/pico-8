version 16
__lua__

--todo: make properties for each animation state
--stateprops = {}
--stateprops.state = 0
--stateprops.framecnt = 1
--stateprops.anispeed = 5

actor = {} -- Initalize the sprite object
actor.x = 0 -- Sprites x position
actor.y = 0 -- Sprites y position
actor.sprt = 48 -- Sprite starting frame
actor.tmr = 1 -- Internal timer for managing animation
actor.flp = false -- Used for flipping the sprite
actor.state = 0 -- 0 == idle, 1 = walk, 2 = jump

updatefrq = 5 --sprite update all 5 frames
updatecnt = 0
stepsize = 1
step = 0

function _init()
  cls()
end

function _update()

  -- buttons 0, 1 = left, right arrow keys
  actor.state = 0
  if(btn(1)) actor.state = 1 actor.flp = false actor.x += 0.2
  if(btn(0)) actor.state = 1 actor.flp = true actor.x -= 1

  --fall/gravity: while not colliding, reduce y position
  if(solidY(actor.x, actor.y+1) == false)  actor.y += 1

  --collide:
    --stop movement: with level borders, blocks
    --die: spikes, bottomless pit (= fixed y coord for each level)

  updateactor()

end

function updateactor()
  if updatecnt == updatefrq then
    if (step > stepsize) step = 0
    actorsprite(step)
    step += 1
    updatecnt = 0
  end
  updatecnt += 1
end

function actorsprite(steps)
if (actor.state == 0) actor.sprt = 50 + steps
if (actor.state == 1) actor.sprt = 48 + steps
--if state == 2
end

function _draw()

  cls() -- Clear thew screen
  -- map and actors
   --cam_x = mid(0,actor.x*8-64,1024-128)
   --cam_y = 0
  	camera (actor.x-64,actor.y)

    --pal(12,0)
     --map (0,0,0,0,128,64,1)
     map(actor.x,50, 0-64,0,16,16)
  --  pal()
  --draw_lvl() -- Level rendering
  spr(actor.sprt,actor.x,actor.y,1,1,actor.flp) -- Draw the main sprite with the modified sprite properties
end


-- test if a point is solid
function solidY (y)
	val = mget(actor.x, y)
  print(fget(val, 7))
	return fget(val, 7)
end


-- test if a point is solid
function solid (x, y)
	if (x < 0 or x >= 128 ) then
		return true end

	val = mget(x, y)
  --print(fget(val))
	return fget(val)
end



